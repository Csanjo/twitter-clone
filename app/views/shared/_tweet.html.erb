<hr>
<div class="tweet-card">
  <div class="tweet-header">
    <% if tweet.user.photo.attached? %>
      <%= cl_image_tag tweet.user.photo.key, height: 1200, width: 1200, crop: :fill, class: "avatar" %>
    <% else %>
      <%= image_tag "blank-profile.jpg", class: "tweet-form-pic col-1" %>
    <% end %>
    <div class="user-info ">
      <span class="username m-1" ><%= link_to tweet.user.username, user_path(tweet.user)  %></span>
      <span class="handle m-1">@<%= tweet.user.username %></span>
      <span class="tweet-time m-1"><%= time_ago_in_words(tweet.created_at)  %> ago</span>
    </div>
  </div>
  <div class="tweet-content">
    <p><%= tweet.description %></p>
  </div>
  <div class="tweet-actions">
    <%= button_tag type: 'button', class: 'icon-btn' do %>
      <i class="fa-regular fa-comment"></i>
    <% end %>
    <%= button_tag type: 'button', class: 'icon-btn' do %>
      <i class="fa-solid fa-retweet"></i>
    <% end %>
    <%= button_tag type: 'button', id: 'heartButton', class: 'heart-btn', data: { controller: 'fav', action: 'click->fav#toggleHeart' } do %>
      <i class="fa-regular fa-heart"></i>
    <% end %>
  </div>
</div>
